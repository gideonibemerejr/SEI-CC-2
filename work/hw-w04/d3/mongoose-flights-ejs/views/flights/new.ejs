<%- include ../partials/header %>
<form action="/flights" autocomplete="off" class="flights-form" method="POST">
  <div>
    <div class="form-group">
      <label for="flightNo">Flight Number</label>
      <input
        name="flightNo"
        type="number"
        class="form-control"
        placeholder="Between 10 and 9999"
      />
    </div>
    <div class="form-group">
      <label for="airline">Airline</label>
      <select class="form-control" name="airline">
        <option value='American'>American</option>
        <option value="United">United</option>
        <option value="Southwest">Southwest</option>
      </select>
    </div>
    <div class="form-group">
      <label for="departs">Departure</label>
      <input class="form-control" name="departs" type="datetime-local" />
    </div>
    <div class="form-group">
      <label for="airport">Origin</label>
      <select class="form-control" name="airport">
        <option value="AUS">AUS</option>
        <option value="DAL">DAL</option>
        <option value="SEA">SEA</option>
        <option value="LAX">LAX</option>
      </select>
    </div>
    <button type="submit" class="btn btn-dark">Add Flight</button>
  </div>
</form>

<%- include ../partials/footer %>
